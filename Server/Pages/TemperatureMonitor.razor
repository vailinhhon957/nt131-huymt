@page "/temperature"
@inject HttpClient Http

<h3>Giám sát Nhiệt độ</h3>

@if (dataList != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nhiệt độ (°C)</th>
                <th>Trạng thái</th>
                <th>Thời gian</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (item, index) in dataList.Select((item, index) => (item, index + 1)))
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Temperature</td>
                    <td>@item.Status</td>
                    <td>@item.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Đang tải dữ liệu...</p>
}

@code {
    class TemperatureData
    {
        public double Temperature { get; set; }
        public string Status { get; set; }
        public DateTime Timestamp { get; set; }
    }

    List<TemperatureData>? dataList;

    protected override async Task OnInitializedAsync()
    {
        var apiUrl = "http://localhost:5073/api/temperature/status";
        var allData = await Http.GetFromJsonAsync<List<TemperatureData>>(apiUrl); ;

        dataList = allData?
            .OrderByDescending(d => d.Timestamp) // Dữ liệu mới nhất lên đầu
            .Take(10)                            // Chỉ lấy 10 dòng
            .ToList();
    }
}
